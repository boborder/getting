{
  "name": "getting",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
    "lint": "biome check --write",
    "format": "biome format --write",
    "cf-typegen": "wrangler types",
    "preview": "bun run build && vite preview",
    "deploy": "bun run build && wrangler deploy",
    "db:create": "wrangler d1 execute getting --local --command='SELECT 1'",
    "db:create:prod": "wrangler d1 create getting",
    "db:generate": "drizzle-kit generate --name init_db",
    "db:migrate": "wrangler d1 migrations apply getting --local",
    "db:migrate:prod": "ENVIRONMENT=production drizzle-kit migrate",
    "db:seed": "tsx drizzle/module/seed.ts",
    "db:seed:prod": "ENVIRONMENT=production tsx drizzle/module/seed.ts",
    "db:setup": "npm run db:touch && npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:setup:prod": "npm run db:create:prod && npm run db:generate && npm run db:migrate:prod && npm run db:seed:prod",
    "db:studio": "drizzle-kit studio",
    "db:studio:prod": "ENVIRONMENT=production drizzle-kit studio",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@conform-to/react": "^1.7.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/swagger-editor": "^1.0.1",
    "@hono/valibot-validator": "^0.5.2",
    "@libsql/client": "^0.15.9",
    "@marsidev/react-turnstile": "^1.1.0",
    "@mjackson/form-data-parser": "^0.7.0",
    "@valibot/to-json-schema": "^1.3.0",
    "better-sqlite3": "^11.10.0",
    "conform-to-valibot": "^1.15.2",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-valibot": "^0.4.2",
    "lunarphase-js": "^2.0.3",
    "hono": "^4.7.11",
    "hono-openapi": "^0.4.8",
    "isbot": "^5.1.28",
    "jotai": "^2.12.5",
    "pinata-web3": "^0.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2",
    "react-ts-tradingview-widgets": "^1.2.8",
    "remix-utils": "^8.7.0",
    "swr": "^2.3.3",
    "valibot": "^1.1.0",
    "xrpl": "^4.3.0",
    "xumm": "^1.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vite-plugin": "^1.6.0",
    "@react-router/dev": "^7.6.2",
    "@tailwindcss/vite": "^4.1.10",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/web": "^0.0.241",
    "drizzle-kit": "^0.31.1",
    "drizzle-seed": "^0.3.1",
    "daisyui": "^5.0.43",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.20.0"
  }
}
